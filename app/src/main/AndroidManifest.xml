<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.google.codelabs.mdc.java.virtualclothierdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.digitalskies.virtualclothierdemo.application.VirtualClothierApllication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/shr_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shrine">
        <activity android:name="com.digitalskies.virtualclothierdemo.productdetailsactivity.ProductDetailsActivity"></activity>
        <activity android:name="com.digitalskies.virtualclothierdemo.RegisterActivity" />
        <activity android:name="com.digitalskies.virtualclothierdemo.productentryactivity.ProductEntryActivity" />
        <activity android:name="com.digitalskies.virtualclothierdemo.mainactivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>